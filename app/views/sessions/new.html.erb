<h1>Login</h1>

<% if flash[:alert] %>
  <p id= "notice" ><%= flash[:alert] %></p>
<% end %>

<%= form_tag do %>
  <div class="field">
    <%= label_tag :user_id, 'User ID:' %>
    <%= text_field_tag :user_id, params[:user_id] %>
  </div>
  <div class="field">
    <%= label_tag :password, 'Password:' %>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="field">
    <%= submit_tag "Logon" %>
  </div>

<% end %>