<p id="notice"><%= notice %></p>

<h2>Books</h2>

<% @books.each do |book| %>
  <div class="well">
    <%= image_tag(book.image_cover_url, class: 'img-thumbnail') %>
    <h3><%= book.title %></h3>
    <%= book.author_id %>
    <%= link_to 'Show', book %>
    <%= link_to 'Edit', edit_book_path(book) %>
    <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<br>

<%= link_to 'New Book', new_book_path %>
