<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Isbn</th>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Abstract</th>
      <th>Pages</th>
      <th>Image cover url</th>
      <th>Published on</th>
      <th>Total in library</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author_id %></td>
        <td><%= book.genre %></td>
        <td><%= book.abstract %></td>
        <td><%= book.pages %></td>
        <td><%= book.image_cover_url %></td>
        <td><%= book.published_on %></td>
        <td><%= book.total_in_library %></td>
        <td><%= book.created_at %></td>
        <td><%= book.updated_at %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

